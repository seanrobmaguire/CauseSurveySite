@model Coursework.Models.User

@{
                /**/

                ViewBag.Title = "Account";
}
<div class="row">
    <div class="col-sm-12 col-md-6">
        <div class="row">
            <div class="col-sm-3">
                <img style="width:100px" src="@Model.UserImage" alt="User image" />
            </div>
            <div class="col-sm-8">
                <h2>@Model.Username Account</h2>
                <div class="row">
                    <div class="col-4">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-secondary mr-2"><a class="btn-secondary" href="/User/Edit/@Model.ID"><i class="far fa-edit"></i> Edit Details</a></button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-danger mr-2"><a class="btn-danger" href="/User/Delete/@Model.ID"><i class="fa fa-trash"></i> Delete Account</a></button>
                    </div>
                </div>

            </div>

        </div>
        <hr />


    </div>
    <div class="col-sm-12 col-md-6 overflow-auto">
        <h3>iObjections you have signed</h3>
        <table class="table table-striped table-bordered table-dark table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Cause Title
                    </th>
                    <th>
                        Date Signed
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model.Signatures.OrderByDescending(i => i.signedOn))
            {

                <tr>


                    <td>
                        <a href="@Url.Action("Details", "Cause",new { id = item.CauseID })">

                            @Html.DisplayFor(modelItem => item.Cause.Title)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.signedOn)
                    </td>

                </tr>

            }
        </table>
    </div>
</div>

