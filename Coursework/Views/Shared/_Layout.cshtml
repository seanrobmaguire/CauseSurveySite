<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - iObject</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.0/css/all.css" integrity="sha384-Mmxa0mLqhmOeaE8vgOSbKacftZcsNYDjQzuCOm6D02luYSzBG8vpaOykv9lFQ51Y" crossorigin="anonymous">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/myScript.js"></script>
</head>

<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("iObject", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("iObjections", "Index", "Cause", new { area = "" }, new { @class = "nav-link" })
                </li>
                @if (Session["UserID"] != null)
                {
                    if (Session["Role"].ToString() == "admin")
                    {
                        @Html.ActionLink("Users", "Index", "User", new { area = "" }, new { @class = "nav-link" })
                    }
                }
            </ul>
            <ul class="nav navbar-right">
                @{
                    if (Session["UserID"] == null)
                    {
                        <button type="button" class="btn btn-outline-secondary mr-2 my-2" data-toggle="modal" data-target="#myModal" style="cursor:pointer" id="loginBtn"><i class="fas fa-sign-in-alt"></i> Log in</button>
                        <button class="btn btn-outline-success my-2" type="button" data-toggle="modal" data-target="#myModal" style="cursor:pointer" id="regBtn" aria-hidden="true"><i class="fas fa-user-plus"></i> Sign up</button>
                    }
                    else
                    {
                        <button class="btn  btn-outline-info my-2 mr-2"><a class="btn-outline-info" href="/User/Details/@Session["UserID"]" role="button"><i class="fas fa-user-alt"></i> @Session["UserName"]</a></button>
                        <button class="btn btn-outline-secondary my-2 mr-2"><a class="btn-outline-secondary" href="/User/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></button>
                    }
                }

            </ul>
        </div>
    </nav>
    @Html.Partial("_loginSignup", new Coursework.Models.User())
    <div class="container-fluid my-5">

        @RenderBody()

    </div>

    <hr />
    <footer></footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
